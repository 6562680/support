{
  "type":         "library",
  "license":      "MIT",
  
  "name":         "gzhegow/support",
  "description":  "Support libraries",
  "authors":      [
    {
      "name":  "gzhegow",
      "email": "6562680@gmail.com"
    }
  ],
  
  "require":      {
    "php":          ">=7.3",
    
    "ext-bcmath":   "*",
    "ext-curl":     "*",
    "ext-fileinfo": "*",
    "ext-json":     "*",
    "ext-mbstring": "*"
  },
  "require-dev":  {
    "phpunit/phpunit":               "~9.0",
    
    "psr/container":                 "~2.0",
    
    "symfony/string":                "~5.0",
    "symfony/translation-contracts": "~2.0",
    "symfony/var-dumper":            "~5.0",
    
    "doctrine/inflector":            "^2.0",
    
    "nette/php-generator":           "~3.0",
    "nikic/php-parser":              "~4.0"
  },
  
  "autoload":     {
    "psr-4": {
      "Gzhegow\\Support\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gzhegow\\Support\\Tests\\": "tests/src"
    }
  }
}